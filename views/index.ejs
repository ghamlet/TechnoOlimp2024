<!doctype html>
<html lang="en">

<head>

  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    @font-face {
      font-family: CustomFont;
      src: url('open-sans.woff2') format('woff2');
      font-weight: 300;
      font-style: 600;
}
  </style>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">

    <title>Display Data</title>

</head>



<body>

  <style>
    .bg-custom {
      background-color: #2D2926;
    }
    </style>

<style>
  .text-custom {
    color: #ffffff;
  }
  </style>
  
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-custom border-bottom shadow-sm">
    <h5 style="font-family: CustomFont;" class="my-0 mr-md-auto font-weight-normal text-custom">АО «ОДК-Климов»</h5>    
        
    <nav class="my-2 my-md-0 mr-md-3">
            <a style="font-family: CustomFont;" class="p-2 text-white" href="#">Информация</a>
            <a style="font-family: CustomFont;" class="p-2 text-white" href="#">Контакты</a>
            <a style="font-family: CustomFont;" class="p-2 text-white" href="#">Группы</a>
        </nav>

        <style>
          .text-but {
            color: #ffffff;
          }
          </style>
          <style>
            .bg-but {
              background-color: #1f2a44;
            }
            </style>
        <a style="font-family: CustomFont;" class="btn btn-outline-primary bg-but text-but" href="#">Вход</a>
    </div>
    
    <!-- <div class="container mt-2">
        <h3>Наши студенты</h3>
    </div> -->
    
    <section class="py-1 text-center container">
    <div class="row py-lg-2">
      <div class="col-lg-8 col-md-8 mx-auto">
        <h1 style="font-family: CustomFont;" class="fw-light">Наши студенты</h1>
        <p style="font-family: CustomFont;" class="lead text-body-secondary">Личные странички</p>
        <p>
          <!-- <a style="font-family: CustomFont;" href="#" class="btn btn-primary my-2">Main call to action</a>
          <a style="font-family: CustomFont;" href="#" class="btn btn-secondary my-2">Secondary action</a> -->
        </p>
      </div>
    </div>
  </section>


  <div class="d-flex flex-wrap">
  <% data.forEach(dat => { %>
    
    <div class="card mb-4 shadow-sm">
      <style>
        .bg-cust {
          background-color: #1f2a44;
        }
        </style>
      <div class="card-header bg-cust text-white">
        <h4 style="font-family: CustomFont;" class="my-0 font-weight-normal"><%=dat.surname%> <%=dat.name%> <%=dat.middle_name%></h4>
      </div>
      <div class="card-body">
        <img src="images/<%=dat.image%>" class="img-thumbnail">
        <!-- <img src="https://searchthisweb.com/wallpaper/eiffel-tower_5120x2880_kooki.jpg" class="img-thumbnail"> -->
        <!-- <h1 class="card-title pricing-card-title">hh <small class="text-muted"> mo</small></h1> -->
<ul class="list-unstyled mt-3 mb-4">
  <li style="font-family: CustomFont;">Образовательная организация: <%=dat.edu_org%></li>
  <li style="font-family: CustomFont;">курс/класс: <%=dat.class_course_of_study%></li>
</ul>

<style>
  .bg-add {
    background-color: #1f2a44;
  }
  </style>
  <!-- <a href="/user" class="btn btn-lg btn-block btn-outline-primary bg-add">Go to Example.com</a> -->
<a href="/user?id=<%=dat.ide%>" style="font-family: CustomFont; color: rgb(255, 253, 253);" type="button" class="btn btn-lg btn-block btn-outline-primary bg-add">Подробнее</a>
      </div>
      </div>

  <% }); %>

  </div>
    

</body>
</html>

